<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup"
    android:paddingBottom="20dp"
    android:paddingHorizontal="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagecp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        android:src="@drawable/blank_profile_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testTextVIew" />
    <ProgressBar
        android:id="@+id/pB"
        style="@android:style/Widget.Holo.Light.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/imagecp"
        app:layout_constraintEnd_toEndOf="@+id/imagecp"
        app:layout_constraintStart_toStartOf="@+id/imagecp"
        app:layout_constraintTop_toTopOf="@+id/imagecp" />

    <TextView
        android:id="@+id/namecp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textAllCaps="true"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"/>
    <TextView
        android:id="@+id/emailcp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"/>

</LinearLayout>