<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/activity_background"
    android:layout_height="match_parent"
    tools:context=".wallchat">

    <include
        android:id="@+id/toolbar"
        layout="@layout/nav_forum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/coustard"
                    android:paddingLeft="10dp"
                    android:text="Pick your choice"
                    android:textColor="#669999"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/wall1"
                    android:layout_width="193dp"
                    android:layout_height="326dp"
                    android:layout_below="@+id/tv"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/wall1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv" />

                <ImageView
                    android:id="@+id/wall2"
                    android:layout_width="193dp"
                    android:layout_height="326dp"
                    android:layout_below="@+id/wall4"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/wall3"
                    android:background="@drawable/wallchat2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/wall1"
                    app:layout_constraintTop_toBottomOf="@+id/wall4" />

                <ImageView
                    android:id="@+id/wall3"
                    android:layout_width="193dp"
                    android:layout_height="326dp"
                    android:layout_below="@+id/wall1"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/wall3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/wall1" />

                <ImageView
                    android:id="@+id/wall4"
                    android:layout_width="193dp"
                    android:layout_height="326dp"
                    android:layout_below="@+id/tv"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/wall1"
                    android:background="@drawable/wall4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/wall3"
                    app:layout_constraintTop_toBottomOf="@+id/tv" />

                <ImageView
                    android:id="@+id/wall5"
                    android:layout_width="193dp"
                    android:layout_height="326dp"
                    android:layout_below="@+id/wall3"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/walldef" />

                <ImageView
                    android:id="@+id/wall6"
                    android:layout_width="193dp"
                    android:layout_height="326dp"
                    android:layout_below="@+id/wall2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/wall5"
                    android:background="@drawable/wall6" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>