<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/about_us"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/activity_background"
    tools:context=".about_us">

    <include
        android:id="@+id/toolbar"
        layout="@layout/navigation_action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coustard"
                android:text="ABOUT US "
                android:textSize="50sp" />

            <TextView
                android:id="@+id/hh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coustard"
                android:text="Follow us on :"
                android:textSize="30sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="37dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:id="@+id/fb_icon"
                    android:src="@drawable/fb"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:height="40dp"
                    android:textSize="26dp"/>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:id="@+id/twitter_icon"
                    android:clickable="true"
                    android:src="@drawable/twitter"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/hhh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="CONTACT US ON :"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="194dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hhhh"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginBottom="50dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="Gmail: "
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="194dp" />

                <TextView
                    android:id="@+id/emaill"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="50dp"
                    android:onClick="process"
                    android:paddingLeft="0.1dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="SayakNOOB@gmail.com"
                    android:textColor="#0000cd"
                    android:textSize="15sp"
                    android:layout_gravity="left"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="194dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/hhhhh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Version:- 0.0.0.1\nWorks with Android Version 4.3 and above"
                tools:layout_editor_absoluteX="176dp"
                tools:layout_editor_absoluteY="412dp"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/developers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed By :"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/devs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTECH CSE 2017-2021 BATCH   â–¼"
                android:textColor="#0000cd"
                android:textSize="20sp" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>