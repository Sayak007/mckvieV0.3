<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/about_us"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".about_us">

    <include
        android:id="@+id/toolbar"
        layout="@layout/navigation_action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center_horizontal"
        android:text="ABOUT US "
        android:textColor="#000000"
        android:background="#0398fc"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:layout_editor_absoluteX="0dp" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/h">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">


            <TextView
                android:id="@+id/hh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="VISIT WEBSITE:"
                android:textColor="#000000"
                android:textSize="30dp" />


                <ImageView
                    android:id="@+id/fb_icon"
                    android:layout_width="85dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:src="@drawable/mckvabtuslogo"
                    />

            <TextView
                android:id="@+id/hhh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:paddingTop="10dp"
                android:text="CONTACT US ON :"
                android:textColor="#000000"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="194dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hhhh"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginBottom="50dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="Our Gmail:"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="194dp" />

                <TextView
                    android:id="@+id/emaill"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    android:layout_marginBottom="50dp"
                    android:onClick="process"
                    android:paddingLeft="0.1dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="mckvieapp2017@gmail.com"
                    android:textColor="#0000cd"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="194dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/hhhhh"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="Product Version: 0.3 Alpha\nWorks with Android Version 4.3 and above"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="176dp"
                tools:layout_editor_absoluteY="412dp" />

            <TextView
                android:id="@+id/developers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Developed By :"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/devs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTECH CSE 2017-2021 BATCH   â–¼"
                android:textColor="#0000cd"
                android:textSize="20sp" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>