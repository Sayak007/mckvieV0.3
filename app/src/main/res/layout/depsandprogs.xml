<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/navigation_action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">
                <ImageView
                    android:id="@+id/backim"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/depsandpgback"/>

                <TextView
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/backim"
                    android:layout_marginTop="0dp"
                    android:padding="10dp"
                    android:text="DEPARTMENTS AND PROGRAMS"
                    android:textColor="#669999"
                    android:textSize="30dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header"
                    android:text="MCKVIE offers a host of Undergraduate and Postgraduate courses in a variety of disciplines. Known for its application centric practical approach the college offers the following courses-"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#000" />
                <TextView
                    android:id="@+id/hd1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1"
                    android:text="UNDERGRADUATE PROGRAMS"
                    android:textSize="23dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="0dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/desc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hd1"
                    android:text="MCKVIE offers 4 year B Tech Degree courses  in"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
                <TextView
                    android:id="@+id/aue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/desc1"
                    android:text="⦿ Automobile Engineering"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textColor="#0061FF"/>
                <TextView
                    android:id="@+id/cse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/aue"
                    android:text="⦿ Computer Science and Engineering"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textColor="#0061FF"/>
                <TextView
                    android:id="@+id/ece"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cse"
                    android:text="⦿ Electronics and Communication Engineering"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textColor="#0061FF"/>
                <TextView
                    android:id="@+id/ee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ece"
                    android:text="⦿ Electrical Engineering"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textColor="#0061FF"/>
                <TextView
                    android:id="@+id/it"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ee"
                    android:text="⦿ Information Technology"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textColor="#0061FF"/>
                <TextView
                    android:id="@+id/me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/it"
                    android:text="⦿ Mechanical Engineering"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textColor="#0061FF"/>

                <TextView
                    android:id="@+id/hd2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/me"
                    android:text="POSTGRADUATE PROGRAMS"
                    android:textSize="23dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="0dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/desc21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hd2"
                    android:text="2 year M Tech Degree course in"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

                <TextView
                    android:id="@+id/ecse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/desc21"
                    android:text="⦿ Electronics And Communication Engineering with Specialization in Communication"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textColor="#0061FF"/>

                <TextView
                    android:id="@+id/desc22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ecse"
                    android:text="3 year Master Degree course"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

                <TextView
                    android:id="@+id/mca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/desc22"
                    android:text="⦿ Master Of Computer Applications(MCA)"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textColor="#0061FF"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>